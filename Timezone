			  g)clear 
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Cuba is - " `date -d "UTC-4 hours" "+%Y-%m-%d %H:%M:%S"` "CU";;
			  h)clear
 			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
