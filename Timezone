#!/bin/bash
# Author: Mahesh Raut : 15th September 2022

	function menu {
					clear
					echo
					echo -e "\t\t\tSelect Continent\n"
					echo -e "\t1. Asia"
					echo -e "\t2. Europe"
					echo -e "\t3. Africa"
					echo -e "\t4. North America"
					echo -e "\t5. South America"
					echo -e "\t6. Antarctica"
					echo -e "\t7. Ocesnia"
					echo -e "\t0. Exit Menu\n\n"
					echo -en "\t\tEnter an Option:"
					read -n 1 option
	case $option in
        0) exit ;;
		1) Asia ;;												   
		2) Europe ;;
		3) Africa ;;
		4) North_America ;;
		5) South_America ;;
		6) Antarctica ;;
		7) Ocesnia ;;
		*) clear
			echo -e "Sorry, wrong selection";;
	esac
	echo -en "\n\n\t\t\tHit any key to continue"
	read -n 1 line
	}	

function Asia {
	while [ 1 ]
	do
			clear
			echo
			echo -e "\t\t\tSelect Country \n"
			echo -e "\ta. India"
			echo -e "\tb. China"
			echo -e "\tc. Japan"
			echo -e "\td. South Korea"
			echo -e "\te. Iran"
			echo -e "\tf. Saudi Arabia"
			echo -e "\tg. Taiwan"
			echo -e "\th. Sri Lanka"
			echo -e "\ti. Indonesia"
			echo -e "\tj. Singapore"
			echo -e "\tk. Pakistan"
			echo -e "\tl. Isrial"	
			echo -e "\tm. Iraq"
			echo -e "\tn. Syria"
			echo -e "\to. Kuwait"
			echo -e "\tp. Nepal"
			echo -e "\tq. Balngladesh"
			echo -e "\tr. Philippines"
			echo -e "\ts. Turkey"
			echo -e "\tt. Change Continent"
			echo -e "\t0. Exit Menu\n\n"
			echo -en "\t\tEnter an Option: "
			read -n 1 option2
			echo
					
			case $option2 in
			  a)clear
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST";;
			  b)clear
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in China is - " `date -d "UTC+8 hours" "+%Y-%m-%d %H:%M:%S"` "CST";;
			  c)clear 
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			    echo "Current time in Japan is - " `date -d "UTC+9 hours" "+%Y-%m-%d %H:%M:%S"` "JST";;
			  d)clear
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in South Korea is - " `date -d "UTC+9 hours" "+%Y-%m-%d %H:%M:%S"` "KST";;
			  e)clear
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Iran is - " `date -d "UTC+4 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IDT";;
			  f)clear
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Saudi Arabia is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "AST";;
			  g)clear 
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Taiwan is - " `date -d "UTC+8 hours" "+%Y-%m-%d %H:%M:%S"` "CST";;
			  h)clear
 			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Sri Lanka is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST";;
			  i)clear 
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Indonesia is - " `date -d "UTC+7 hours" "+%Y-%m-%d %H:%M:%S"` "IST";;
			  j)clear 
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Singapore is - " `date -d "UTC+8 hours" "+%Y-%m-%d %H:%M:%S"` "SST";;
			  k)clear 
			   echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Pakistan is - " `date -d "UTC+5 hours" "+%Y-%m-%d %H:%M:%S"` "PKT";;
			  l)clear 
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Israel is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "IDT";;
			  m)clear 
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Iraq is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "AST";;
			  n)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Syria is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "EEST";;
			  o)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Kuwait is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "AST";;
			  p)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Nepal is - " `date -d "UTC+5 hours 45 mins" "+%Y-%m-%d %H:%M:%S"` "NPT";;
			  q)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Bangladesh is - " `date -d "UTC+6 hours" "+%Y-%m-%d %H:%M:%S"` "BST";;
			  r)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Philipines is - " `date -d "UTC+8 hours" "+%Y-%m-%d %H:%M:%S"` "PST";;
			  s)clear
			    echo "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST"
			   echo "Current time in Turkey is - " `date -d "UTC+3 hours" "+%Y-%m-%d %H:%M:%S"` "TRT";;
			  t)clear
			   menu;;
			  0) exit ;;
			  *) clear
			  echo "Sorry, wrong selection";;
			esac
			echo -en "\n\n\t\t\tHit any key to continue"
		read -n 1 line
		done
	}									

