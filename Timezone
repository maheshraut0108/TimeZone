function North_America {
		while [ 1 ]
		do
			clear
			echo
			echo -e "\t\t\tSelect Country \n"
			echo -e "\ta. United States"
			echo -e "\tb. Canada"
			echo -e "\tc. Mexico"
			echo -e "\td. Grrenland"
			echo -e "\te. Panama"
			echo -e "\tf. Jamica"
			echo -e "\tg. Cuba"
			echo -e "\th. Guatemala"
			echo -e "\ti. Puerto Rico"
			echo -e "\tj. Haiti"
			echo -e "\tt. Change Continent"
			echo -e "\t0. Exit Menu\n\n"
			echo -en "\t\tEnter an Option: "
			read -n 1 option2
			echo
					
			case $option2 in
			  a)clear
			   echo -e "Current time in India is - " `date -d "UTC+5 hours 30 mins" "+%Y-%m-%d %H:%M:%S"` "IST \n"
			   echo -e "United States Time with Timezones: \n\n"
			   echo "Current time in Chicago is - " `date -d "UTC-5 hours" "+%Y-%m-%d %H:%M:%S"` "CDT"
